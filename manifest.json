{
  "manifest_version": 3,
  "name": "ささっとテンプレ",
  "version": "2.0.0",
  "description": "Webサイト上のテキスト入力欄で利用できる、定型文挿入支援ツール",
  "permissions": [
    "storage",
    "sidePanel"
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_title": "ささっとテンプレ",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "side_panel": {
    "default_path": "sidebar.html"
  }
}
